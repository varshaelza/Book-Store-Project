
@{
    ViewBag.Title = "TransferMoney";
}

<h2>Transfer Money</h2>
<form method="post">
    <input type="number" name="sender" placeholder="Enter Sender's Account. no" class="form-control" /><br />
    <input type="number" name="receiver" placeholder="Enter Receiver's Account. no" class="form-control" /><br />
    <input type="number" name="amount" placeholder="Enter Amount" class="form-control" /><br />
    <button type="submit"  class="btn btn-primary">Transfer</button>
    <button type="reset"  class="btn btn-warning">Reset</button>
</form>
<br /><br />
<p style=" color:red">@ViewBag.message</p>
