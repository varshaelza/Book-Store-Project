@model IEnumerable<ProductsApp_ADODemo.Models.Products>
@{
    ViewBag.Title = "All Products";
    Layout = "~/Views/Shared/_ProductInfoLayout.cshtml";
}

<h2>All Products</h2>
<br />
<br />
@if (Model != null)
{
    <table>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Category</th>
            <th>Product Quantity</th>
            <th>Product Price</th>
            <th>Product Discount</th>
        </tr>

        @foreach (var prod in Model)
        {

            <tr>
                <td>@prod.PID</td>
                <td>@prod.PName</td>
                <td>@prod.PCategory</td>
                <td>@prod.PQty</td>
                <td>@prod.PPrice</td>
                <td>@prod.PDiscount</td>
            </tr>


        }


    </table>
}


