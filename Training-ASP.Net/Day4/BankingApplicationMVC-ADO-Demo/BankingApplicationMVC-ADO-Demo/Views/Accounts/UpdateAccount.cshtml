
@{
    ViewBag.Title = "UpdateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Account</h2>
<form method="post">
    <input type="text" name="p_accNo" placeholder="Enter Account Number" class="form-control" />
    <br />

    <input type="text" name="p_accName" placeholder="Enter Account Holder's Name" class="form-control" />
    <br />

    <input type="number" name="p_accBalance" placeholder="Enter Account Balance" class="form-control" />
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="reset" class="btn btn-warning">Reset</button>
    <br />
</form>



